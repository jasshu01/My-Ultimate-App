<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialogImagePickerClickImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/camera_icon"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="248dp" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Click Picture"
                app:layout_constraintEnd_toEndOf="@+id/dialogImagePickerClickImage"
                app:layout_constraintStart_toStartOf="@+id/dialogImagePickerClickImage"
                app:layout_constraintTop_toBottomOf="@+id/dialogImagePickerClickImage" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialogImagePickerPickImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/pick_from_gallery"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="199dp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Choose From Gallery"
                app:layout_constraintEnd_toEndOf="@+id/dialogImagePickerPickImage"
                app:layout_constraintStart_toStartOf="@+id/dialogImagePickerPickImage"
                app:layout_constraintTop_toBottomOf="@+id/dialogImagePickerPickImage" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
